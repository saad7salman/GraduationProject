<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.example.sss.capstone.Customer.ProductDeliveryStatus">

    <LinearLayout
        android:id="@+id/stepViewLayout"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <com.baoyachi.stepview.VerticalStepView
        android:id="@+id/verticalStepView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.baoyachi.stepview.VerticalStepView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/stepViewLayout"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Provider Info"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvProvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provider Name"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" >

                <TextView
                    android:id="@+id/tvProvCellInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Cell phone"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvProvCellPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="555-5555-5555"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvProvAddressInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Provider Address Info"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tvProviderAddressDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Detail exampl 100 xyz"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">
        <Button
            android:id="@+id/btnGetDirectionForCus"
            android:layout_width="125dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_backgrount"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:text="Get Direction"
            android:textColor="#FFF"
            android:textStyle="italic" />

        <Button
            android:id="@+id/leaveRevBtn"
            android:layout_width="125dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvCusOrderStatus"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_backgrount"
            android:padding="10dp"
            android:text="Leave a Review"
            android:textColor="#FFF"
            android:textStyle="italic"
            android:layout_marginLeft="25dp"
            android:visibility="gone" />
</LinearLayout>
    </LinearLayout>

</RelativeLayout>
